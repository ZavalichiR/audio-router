# Basic setup configuration for Discord Audio Router
# Copy this file to .env and fill in your bot tokens

# Required: Main control bot token
AUDIO_BROADCAST_TOKEN=your_audio_broadcast_bot_token_here

# Required: Audio forwarder bot token  
AUDIO_FORWARDER_TOKEN=your_audio_forwarder_bot_token_here

# Required: Audio receiver bot tokens (comma-separated)
# Create multiple bots in Discord Developer Portal for multiple listener channels
AUDIO_RECEIVER_TOKENS=your_audio_receiver_bot_token_1,your_audio_receiver_bot_token_2,your_audio_receiver_bot_token_3

# Optional: Bot command prefix (default: !)
BOT_PREFIX=!

# Optional: Log level (default: INFO)
LOG_LEVEL=INFO

# Optional: Role names (defaults shown)
SPEAKER_ROLE_NAME=Speaker
BROADCAST_ADMIN_ROLE_NAME=Broadcast Admin

# Optional: Auto-create roles (default: true)
AUTO_CREATE_ROLES=true
