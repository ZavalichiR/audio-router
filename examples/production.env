# Production configuration for Discord Audio Router
# Copy this file to .env and fill in your bot tokens

# Required: Main control bot token
AUDIO_BROADCAST_TOKEN=your_production_audio_broadcast_bot_token_here

# Required: Audio forwarder bot token
AUDIO_FORWARDER_TOKEN=your_production_audio_forwarder_bot_token_here

# Required: Audio receiver bot tokens (comma-separated)
# Create multiple bots for multiple listener channels
AUDIO_RECEIVER_TOKENS=your_production_audio_receiver_bot_token_1,your_production_audio_receiver_bot_token_2,your_production_audio_receiver_bot_token_3,your_production_audio_receiver_bot_token_4,your_production_audio_receiver_bot_token_5

# Production settings
BOT_PREFIX=!
LOG_LEVEL=WARNING

# Custom role names for production
SPEAKER_ROLE_NAME=Broadcast Speaker
BROADCAST_ADMIN_ROLE_NAME=Audio Admin

# Auto-create roles enabled for production
AUTO_CREATE_ROLES=true

# Additional production settings (if needed)
# WEBSOCKET_HOST=localhost
# WEBSOCKET_PORT=8765
# MAX_LISTENER_CHANNELS=10
