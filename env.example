# ===========================================
# DISCORD BOT TOKENS (ALL REQUIRED)
# ===========================================

# AudioBroadcast Bot (Main Control Bot) - REQUIRED
# This bot handles commands and manages the system
AUDIO_BROADCAST_TOKEN=your_audiobroadcast_bot_token_here

# AudioForwarder Bot (Speaker Bot) - REQUIRED
# This bot captures audio from speaker channels
AUDIO_FORWARDER_TOKEN=your_audioforwarder_bot_token_here

# AudioReceiver Bots (Listener Bots) - REQUIRED
# Each AudioReceiver bot needs its own unique token
# Comma-separated list of tokens for multiple listener channels
AUDIO_RECEIVER_TOKENS=your_audioreceiver_1_bot_token,your_audioreceiver_2_bot_token,your_audioreceiver_3_bot_token

# ===========================================
# BOT CONFIGURATION
# ===========================================

# Command prefix for bot commands
BOT_PREFIX=!

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# DEBUG: Shows all logs including audio packet details
# INFO: Shows important events and status updates
# WARNING: Shows warnings and errors only
LOG_LEVEL=INFO

# ===========================================
# ACCESS CONTROL
# ===========================================

# Role names for access control
SPEAKER_ROLE_NAME=Speaker
BROADCAST_ADMIN_ROLE_NAME=Broadcast Admin

# Auto-create roles if they don't exist
AUTO_CREATE_ROLES=true

# ===========================================
# WEBSOCKET RELAY SERVER (OPTIONAL)
# ===========================================

# Start the centralized WebSocket relay server
# Set to false if you want to use individual WebSocket servers per AudioForwarder
START_RELAY_SERVER=true

# WebSocket relay server configuration
RELAY_SERVER_HOST=localhost
RELAY_SERVER_PORT=8765

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug mode for development (overrides LOG_LEVEL to DEBUG)
DEBUG=false

# Enable verbose logging (shows detailed audio packet information)
# Set to true for debugging audio flow issues
VERBOSE_LOGGING=false

# ===========================================
# LOGGING CONFIGURATION EXAMPLES
# ===========================================

# For normal operation (recommended):
# LOG_LEVEL=INFO
# VERBOSE_LOGGING=false
# DEBUG=false

# For debugging audio issues:
# LOG_LEVEL=DEBUG
# VERBOSE_LOGGING=true
# DEBUG=true

# For production (minimal logging):
# LOG_LEVEL=WARNING
# VERBOSE_LOGGING=false
# DEBUG=false

# ===========================================
# NOTES
# ===========================================

# 1. Each bot must have its own unique token
# 2. Create bots in Discord Developer Portal:
#    - AudioBroadcast (main control bot)
#    - AudioForwarder (speaker bot)
#    - AudioReceiver-1, AudioReceiver-2, etc. (listener bots)
# 3. Enable these Privileged Gateway Intents for all bots:
#    - Server Members Intent
#    - Message Content Intent
# 4. Give all bots Administrator permission or these specific permissions:
#    - Manage Channels
#    - Manage Roles
#    - Connect
#    - Speak
#    - Send Messages
#    - Read Message History
#    - Embed Links
